<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="180dp"
            android:layout_height="246dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/poster" />

        <TextView
            android:id="@+id/tvres_name"
            android:layout_width="173dp"
            android:layout_height="34dp"
            android:layout_marginTop="15dp"
            android:text="@string/titel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/restaurant_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvaddress"
            android:layout_width="173dp"
            android:layout_height="34dp"
            android:layout_marginTop="15dp"
            android:text="@string/Overview"
            app:layout_constraintEnd_toEndOf="@+id/tvres_name"
            app:layout_constraintStart_toStartOf="@+id/tvres_name"
            app:layout_constraintTop_toBottomOf="@+id/tvres_name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="176dp"
            android:layout_height="115dp"
            android:layout_marginTop="8dp"
            android:hint="@string/overview"
            android:text="@string/Overview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvaddress"
            app:layout_constraintStart_toStartOf="@+id/tvaddress"
            app:layout_constraintTop_toBottomOf="@+id/tvaddress" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>